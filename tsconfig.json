{
  "compilerOptions": {
      "target": "ES2019",
      "outDir": "./dist",
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": [
      "src/**/*.ts",
      "./app.ts"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "src/**/*.d.ts"
  ],
  "types": ["src/@types", "node_modules/@types"],
}